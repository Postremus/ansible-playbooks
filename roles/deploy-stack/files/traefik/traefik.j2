version: '3.4'
services:
  traefik:
    image: traefik:{{ env.versions[service.name] }}
    ports:
      - 80:80
      - 443:443
    networks:
      - common_prod_traefik
      - common_build_traefik
      - common_dev_traefik
    volumes:
      - /var/run/docker.sock:/var/run/docker.sock
      - "{{ docker_service_dir }}/{{env.stack}}/{{ service.name }}/acme.json:/acme.json"
    command:
      - "--api"
      - "--entrypoints=Name:http Address::80 Redirect.EntryPoint:https"
      - "--entrypoints=Name:https Address::443 TLS"
      - "--defaultentrypoints=http,https"
      - "--docker"
      - "--docker.swarmmode"
      - "--debug"
      - "--loglevel=error"
      - "--acme"
      - "--acme.email=postremus1996@googlemail.com"
      - "--acme.storage=/acme.json"
      - "--acme.onHostRule=true"
      #- "--acme.dnschallenge=true"
      #- "--acme.dnschallenge.provider=digitalocean"
      - "--acme.httpchallenge"
      - "--acme.httpchallenge.entrypoint=http"
      - "--acme.entrypoint=https"
      - "--acme.acmelogging"
    environment:
      DO_AUTH_TOKEN: /run/secrets/DO_AUTH_TOKEN
    deploy:
      labels:
        - "traefik.docker.network={{ env.traefik_network }}"
        - "traefik.frontend.rule={{ env.frontend_rules.traefik }}"
        - "traefik.backend=traefik-dashboard"
        - "traefik.port=8080"
        - "traefik.frontend.headers.STSSeconds=315360000"
        - "traefik.frontend.headers.STSPreload=true"
      placement:
        constraints:
          - node.role == manager
secrets:
  DO_AUTH_TOKEN:
    external: true
networks:
  common_prod_traefik:
    external:
      name: common_prod_traefik
  common_dev_traefik:
    external:
      name: common_dev_traefik
  common_build_traefik:
    external:
      name: common_build_traefik